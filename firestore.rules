rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Operaciones
    match /operaciones/{operacionId} {
      allow read, write: if request.auth != null;
    }

    // Documentos (si ya los us√°s)
    match /documentos/{docId} {
      allow read, write: if request.auth != null;
    }

  }
}
